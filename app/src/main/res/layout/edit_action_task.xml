<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="@dimen/fab_margin"
        android:paddingRight="@dimen/fab_margin"
        tools:ignore="HardcodedText">

        <CheckBox
            android:id="@+id/map_center"
            style="@style/listCheckbox"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Map Center" />

        <Spinner
            android:id="@+id/map_center_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:entries="@array/on_off_toggle"
            android:visibility="gone" />

        <CheckBox
            android:id="@+id/live_tracking_asamm"
            style="@style/listCheckbox"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Live Tracking ASAMM" />

        <LinearLayout
            android:id="@+id/live_tracking_asamm_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone">

            <Spinner
                android:id="@+id/live_tracking_asamm_spinner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:entries="@array/start_stop" />

            <EditText
                android:id="@+id/live_tracking_asamm_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="ASAMM tracking config name (optional)"
                android:imeOptions="actionDone"
                android:inputType="text" />
        </LinearLayout>

        <CheckBox
            android:id="@+id/live_tracking_custom"
            style="@style/listCheckbox"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Live Tracking Custom" />

        <LinearLayout
            android:id="@+id/live_tracking_custom_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone">

            <Spinner
                android:id="@+id/live_tracking_custom_spinner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:entries="@array/start_stop" />

            <EditText
                android:id="@+id/live_tracking_custom_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Custom tracking config name (optional)"
                android:imeOptions="actionDone"
                android:inputType="text" />
        </LinearLayout>

        <CheckBox
            android:id="@+id/map_move_x"
            style="@style/listCheckbox"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Map Move X" />

        <RelativeLayout
            android:id="@+id/map_move_x_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:visibility="gone">

            <Spinner
                android:id="@+id/map_move_x_spinner"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:entries="@array/map_move_units" />

            <EditText
                android:id="@+id/map_move_x_text"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_toLeftOf="@id/map_move_x_spinner"
                android:layout_toStartOf="@id/map_move_x_spinner"
                android:gravity="end"
                android:hint="horizontal amount"
                android:imeOptions="actionDone"
                android:inputType="numberSigned" />
        </RelativeLayout>

        <CheckBox
            android:id="@+id/map_move_y"
            style="@style/listCheckbox"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Map Move Y" />

        <RelativeLayout
            android:id="@+id/map_move_y_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:visibility="gone">

            <Spinner
                android:id="@+id/map_move_y_spinner"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:entries="@array/map_move_units" />

            <EditText
                android:id="@+id/map_move_y_text"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_toLeftOf="@id/map_move_y_spinner"
                android:layout_toStartOf="@id/map_move_y_spinner"
                android:gravity="end"
                android:hint="vertical amount"
                android:imeOptions="actionDone"
                android:inputType="numberSigned" />
        </RelativeLayout>

        <CheckBox
            android:id="@+id/map_zoom"
            style="@style/listCheckbox"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Map Zoom Action" />

        <Spinner
            android:id="@+id/map_zoom_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:entries="@array/map_zoom"
            android:visibility="gone" />

        <CheckBox
            android:id="@+id/open"
            style="@style/listCheckbox"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Open Action" />

        <Spinner
            android:id="@+id/open_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:entries="@array/open_action"
            android:visibility="gone" />

        <CheckBox
            android:id="@+id/preset"
            style="@style/listCheckbox"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Preset apply" />

        <EditText
            android:id="@+id/preset_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Name of preset"
            android:imeOptions="actionDone"
            android:inputType="text"
            android:visibility="gone" />

        <CheckBox
            android:id="@+id/screen"
            style="@style/listCheckbox"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Screen Action" />

        <Spinner
            android:id="@+id/screen_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:entries="@array/on_off_toggle"
            android:visibility="gone" />

        <CheckBox
            android:id="@+id/track_record"
            style="@style/listCheckbox"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Track record" />

        <RelativeLayout
            android:id="@+id/track_record_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone">

            <Spinner
                android:id="@+id/track_record_spinner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:entries="@array/track_record" />

            <EditText
                android:id="@+id/track_record_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/track_record_spinner"
                android:hint="Profile name / Point name (Optional)"
                android:imeOptions="actionDone"
                android:inputType="text" />

            <CheckBox
                android:id="@+id/track_record_checkbox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/track_record_text"
                android:text="auto save recording" />

            <TextView
                android:id="@+id/track_record_wpt_spinner_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@id/track_record_checkbox"
                android:gravity="center"
                android:minHeight="48dp"
                android:padding="5dp"
                android:text="Action after add wpt: " />

            <Spinner
                android:id="@+id/track_record_wpt_spinner"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_below="@id/track_record_checkbox"
                android:layout_toEndOf="@id/track_record_wpt_spinner_label"
                android:layout_toRightOf="@id/track_record_wpt_spinner_label"
                android:entries="@array/track_record_wpt_after" />

        </RelativeLayout>

    </LinearLayout>


</ScrollView>
